{% extends 'layout_admin.html.twig' %}

{% block title %}
    {{ 'admin-user.new.title'|trans }}
{% endblock title %}

{% block main %}
    <h2>{{ 'admin-user.new.title'|trans }}</h2>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.username, {
                    'label': 'admin-user.form.username'
                }) }}
                {% if (form.offsetExists('password')) %}
                    {{ form_row(form.password) }}
                {% endif %}
                {{ form_row(form.role, {
                    'label': 'admin-user.form.role'
                }) }}
                {{ form_widget(form.back, {
                    'label': 'generic.form.back',
                    'attr': {
                        'class': 'btn-secondary btn-sm',
                        'onclick': 'bsu.go("' ~ path('admin_user') ~ '");'
                    }
                }) }}
                {{ form_widget(form.save, {
                    'label': 'generic.form.save',
                    'attr': {
                        'class': 'btn-info btn-sm'
                    }
                }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock main %}