{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/sidebar.css') }}">
{% endblock stylesheets %}

{% block navbar %}
    {{ renderNavbar() }}
{% endblock navbar %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-xl-1 col-lg-2 d-none d-md-block bg-dark sidebar">
                {{ renderSidebar() }}
            </nav>
            <main role="main" class="col-xl-11 col-lg-10 col-md-12 ml-sm-auto px-4">
                {% block main %}{% endblock main %}
            </main>
        </div>
    </div>
{% endblock body %}