{% extends 'admin.html.twig' %}

{% block title %}
    Utilisateurs
{% endblock title %}

{% block main %}
    <h2>Liste des utilisateurs</h2>
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                <tr class="{% if user.isActive == 0 %}bg-danger{% endif %}">
                    <th scope="row">{{ user.username }}</th>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock main %}